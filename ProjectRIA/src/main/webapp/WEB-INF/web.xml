<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" version="3.1">
  <display-name>TIWProjectRIA</display-name>
  <context-param>
    <param-name>dbUrl</param-name>
    <param-value>jdbc:mysql://localhost:3306/db_bank_ria?serverTimezone=UTC</param-value>
  </context-param>
  <context-param>
    <param-name>dbUser</param-name>
    <param-value>root</param-value>
  </context-param>
  <context-param>
    <param-name>dbPassword</param-name>
    <param-value>123456</param-value>
  </context-param>
  <context-param>
    <param-name>dbDriver</param-name>
    <param-value>com.mysql.cj.jdbc.Driver</param-value>   
  </context-param>
  <filter> 
      <filter-name>LoginChecker</filter-name>
      <filter-class>it.polimi.tiw.projectRIA.filters.LoginChecker</filter-class> 
 </filter> 
  <filter> 
      <filter-name>NoCacher</filter-name>
      <filter-class>it.polimi.tiw.projectRIA.filters.NoCacher</filter-class> 
 </filter> 
   <filter> 
      <filter-name>UserNotLogged</filter-name>
      <filter-class>it.polimi.tiw.projectRIA.filters.UserNotLogged</filter-class> 
 </filter> 
  <filter-mapping> 
    <filter-name>NoCacher</filter-name> 
    <url-pattern>/Home.html</url-pattern> 
 </filter-mapping> 
  <filter-mapping> 
    <filter-name>LoginChecker</filter-name> 
    <url-pattern>/AddMoney</url-pattern> 
	<url-pattern>/AddContact</url-pattern> 
	<url-pattern>/GetAddressBook</url-pattern>
	<url-pattern>/CheckTransaction</url-pattern> 
    <url-pattern>/CreateNewAccount</url-pattern> 
    <url-pattern>/GetAccountDetails</url-pattern> 
    <url-pattern>/GetAccounts</url-pattern> 
    <url-pattern>/Logout</url-pattern> 
    <url-pattern>/Home.html</url-pattern> 
 </filter-mapping>   
 <filter-mapping>
  	<filter-name>UserNotLogged</filter-name>
  	<url-pattern>/Registration.html</url-pattern>
  	<url-pattern>/CheckRegistration</url-pattern>		
  </filter-mapping>   
    
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
</web-app>